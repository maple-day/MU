<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardview_margin"
        android:layout_weight="1"
        android:clickable="true"
        android:elevation="@dimen/widget_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius"
        app:cardElevation="@dimen/cardview_elevation"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:paddingEnd="15px"
            android:paddingRight="15px">

            <ImageView
                android:layout_width="240px"
                android:layout_height="240px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@color/color_divider"
                android:padding="30px"
                android:src="@drawable/ic_explore_default" />

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="240px"
                android:layout_height="240px"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30px"
                android:background="@null" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_source"
                android:layout_alignTop="@+id/iv_img"
                android:layout_toEndOf="@+id/iv_img"
                android:paddingBottom="15px"
                android:paddingRight="15px"
                android:paddingTop="15px"
                android:textColor="@color/color_primary_text"
                android:textSize="48px" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_img"
                android:layout_toRightOf="@id/iv_img"
                android:layout_marginBottom="18px"
                android:text="时间"
                android:layout_marginRight="15px"
                android:textColor="@color/color_secondary_text"
                android:textSize="28px" />
            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_img"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15px"
                android:text="水电费"
                android:layout_marginRight="15px"
                android:textColor="@color/color_secondary_text"
                android:textSize="36px" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>